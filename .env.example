# Environment Configuration Template
# Copy this file to .env and customize values for your environment
#
# SECURITY WARNING: 
# - Never commit .env files to version control
# - Change all default passwords and secret keys in production
# - Use strong, unique values for production deployments
# - Regularly rotate secret keys and admin credentials

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
ENVIRONMENT=development
APP_NAME=Credit Card Processor
APP_VERSION=1.0.0
LOG_LEVEL=debug

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# SQLite database file path (relative to backend directory)
DATABASE_URL=sqlite:///./data/database.db

# Database connection pool settings (for future PostgreSQL support)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=credit_card_processor
# DB_USER=postgres
# DB_PASSWORD=your_password_here

# =============================================================================
# API CONFIGURATION
# =============================================================================
# Backend API settings
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://frontend:3000

# API rate limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
# Frontend development server
FRONTEND_HOST=0.0.0.0
FRONTEND_PORT=3000

# API base URL for frontend requests
VITE_API_BASE_URL=http://localhost:8000
VITE_APP_TITLE=Credit Card Processor (Development)

# =============================================================================
# FILE PROCESSING SETTINGS
# =============================================================================
# Upload directory (relative to backend directory)
UPLOAD_DIR=./data/uploads
EXPORT_DIR=./data/exports

# File size limits (in bytes)
MAX_FILE_SIZE=10485760  # 10MB
MAX_FILES_PER_SESSION=10

# Supported file types (comma-separated)
ALLOWED_FILE_TYPES=.pdf,.csv,.xlsx,.xls

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# CRITICAL: Admin users configuration
# Comma-separated list of usernames with administrative privileges
# SECURITY NOTICE: Must be set via environment variable - no default provided
# Example: ADMIN_USERS=admin1,admin2,admin3
# ADMIN_USERS=

# Session security settings
SESSION_SECRET_KEY=dev-session-secret-change-in-production-must-be-32-chars-minimum
SESSION_TIMEOUT_MINUTES=480
MAX_LOGIN_ATTEMPTS=5
LOGIN_LOCKOUT_MINUTES=15

# CORS security - allowed origins for frontend requests
CORS_ORIGINS=http://localhost:3000,http://frontend:3000

# Trusted hosts for security middleware
TRUSTED_HOSTS=localhost,127.0.0.1,*.local

# Security headers and HTTPS enforcement
ENABLE_SECURITY_HEADERS=true
FORCE_HTTPS=false
HSTS_MAX_AGE=31536000

# Rate limiting protection
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

# JWT token settings (for future authentication)
# JWT_SECRET_KEY=your-super-secret-jwt-key-here-minimum-32-characters-long
# JWT_ALGORITHM=HS256
# JWT_EXPIRE_MINUTES=30

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
# Azure Document Intelligence (if using)
# AZURE_DOCUMENT_INTELLIGENCE_ENDPOINT=https://your-resource.cognitiveservices.azure.com/
# AZURE_DOCUMENT_INTELLIGENCE_KEY=your-key-here

# =============================================================================
# DOCKER DEVELOPMENT SETTINGS
# =============================================================================
# Hot reload settings for development
PYTHONDONTWRITEBYTECODE=1
PYTHONUNBUFFERED=1
CHOKIDAR_USEPOLLING=true
WATCHPACK_POLLING=true

# Node.js settings
NODE_ENV=development

# =============================================================================
# MONITORING AND LOGGING
# =============================================================================
# Log file settings
LOG_FILE_PATH=./logs/app.log
LOG_ROTATION_SIZE=10MB
LOG_RETENTION_DAYS=7

# Health check settings
HEALTH_CHECK_TIMEOUT=30
HEALTH_CHECK_INTERVAL=30

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================
# Enable development features
DEBUG_MODE=true
ENABLE_SWAGGER_UI=true
ENABLE_REDOC=true

# Testing database (separate from main database)
TEST_DATABASE_URL=sqlite:///./data/test_database.db

# =============================================================================
# PRODUCTION ENVIRONMENT SETTINGS
# =============================================================================
# Uncomment and configure for production deployments
# ENVIRONMENT=production
# DEBUG_MODE=false
# ENABLE_SWAGGER_UI=false
# ENABLE_REDOC=false
# FORCE_HTTPS=true
# 
# CRITICAL: Production admin users (use actual production usernames)
# ADMIN_USERS=prod_admin1,prod_admin2
# WARNING: Never commit actual admin usernames to version control!
#
# Production session secret (generate with: python -c "import secrets; print(secrets.token_urlsafe(32))")
# SESSION_SECRET_KEY=your-production-secret-key-here-32-chars-minimum
#
# Production CORS origins (your actual frontend domains)
# CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
#
# Production trusted hosts
# TRUSTED_HOSTS=yourdomain.com,www.yourdomain.com