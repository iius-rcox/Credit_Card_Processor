# Credit Card Processor - Development Environment Configuration
# =======================================================
# This file is configured for local Docker testing
# =======================================================

# =======================================================
# REQUIRED SECURITY SETTINGS
# =======================================================

# Admin Users - For development testing
ADMIN_USERS=admin,test,rcox

# Session Secret Key - Development key (DO NOT use in production)
SESSION_SECRET_KEY=dev-session-secret-key-for-testing-only-32-chars-min

# CORS Origins - Allow local development
CORS_ORIGINS=http://localhost:3000,http://localhost:8001,http://frontend:3000

# Trusted Hosts
TRUSTED_HOSTS=localhost,127.0.0.1,*.local,frontend,backend

# =======================================================
# ENVIRONMENT & DEPLOYMENT SETTINGS
# =======================================================

# Environment
ENVIRONMENT=development

# Debug Mode
DEBUG=true

# Force HTTPS
FORCE_HTTPS=false

# =======================================================
# SESSION & AUTHENTICATION SETTINGS
# =======================================================

# Session Timeout
SESSION_TIMEOUT_MINUTES=480

# Login Security
MAX_LOGIN_ATTEMPTS=5
LOGIN_LOCKOUT_MINUTES=15

# =======================================================
# SECURITY HEADERS & RATE LIMITING
# =======================================================

# Security Headers
ENABLE_SECURITY_HEADERS=true

# HSTS Max Age
HSTS_MAX_AGE=31536000

# Rate Limiting - Increased for development
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_PERIOD=60

# =======================================================
# APPLICATION SETTINGS
# =======================================================

# Application Information
APP_NAME=Credit Card Processor
APP_VERSION=1.0.0

# File Upload Limits
MAX_FILE_SIZE_MB=100

# Processing Limits
MAX_EMPLOYEES=100

# Data Paths
DATABASE_PATH=./data/database.db
UPLOAD_PATH=./data/uploads
EXPORT_PATH=./data/exports

# =======================================================
# DEVELOPMENT SETTINGS
# =======================================================

# Log Level
LOG_LEVEL=debug

# Hot Reload Settings
PYTHONDONTWRITEBYTECODE=1
PYTHONUNBUFFERED=1
CHOKIDAR_USEPOLLING=true
WATCHPACK_POLLING=true

# Node.js Environment
NODE_ENV=development

# Frontend Settings - Docker networking
VITE_API_BASE_URL=http://backend:8001
VITE_APP_TITLE=Credit Card Processor (Development)

# Development Authentication
VITE_DEV_USER=rcox